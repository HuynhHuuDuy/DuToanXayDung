@using Du_Toan_Xay_Dung.Handlers
@{
    ViewBag.Title = "Thêm công trình";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = "";
}
<div class="container body-content">
    <h2>Thêm công trình</h2>
    <div class="row">
        <form class="form-horizontal" role="form" method="post" action="/CongTrinh/ThemCongTrinh">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên công trình:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TenCT" name="TenCT" placeholder="Tên công trình">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="MoTa" name="MoTa" placeholder="Mô tả">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Lưu</button>
                </div>
            </div>
        </form>
    </div>
</div>

